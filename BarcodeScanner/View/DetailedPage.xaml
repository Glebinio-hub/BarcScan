<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="BarcodeScanner.DetailedPage"
             Title="Подробная информация"
             Background="White">
    <VerticalStackLayout>
        
        <ListView ItemsSource="{Binding SelectedItem}"
                  Margin="0" 
                  SeparatorColor="White" 
                  HorizontalOptions="FillAndExpand" 
                  VerticalOptions="FillAndExpand" 
                  BackgroundColor="Black"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10"
                              HeightRequest="550"
                              BackgroundColor="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="300"/>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Frame BorderColor="Green" 
                                   CornerRadius="80" 
                                   Padding="0" 
                                   HasShadow="True"
                                   BackgroundColor="Black">
                                
                                <Image Source="{Binding Image}"
                                       Grid.Row="0"
                                       Margin="10"
                                       WidthRequest="390"/>
                            </Frame>
                            
                            <Label Margin="0,15,0,0"
                                   Text="Название:"
                                   FontAttributes="Italic"
                                   TextColor="Black"
                                   Grid.Row="1" />
                            
                            <BoxView HeightRequest="1"
                                     Margin="0,25,0,0"
                                     Color="YellowGreen"
                                     Grid.Row="2"/>
                            
                            <Label Margin="0"
                                   Text="{Binding Name}"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   Grid.Row="2" />
                            
                            <Label Margin="5"
                                   Text="Описание:"
                                   FontAttributes="Italic"
                                   TextColor="Black"
                                   Grid.Row="3" />
                            
                            <BoxView HeightRequest="1"
                                     Margin="0,25,0,0" 
                                     Color="YellowGreen"
                                     Grid.Row="4"/>
                            
                            <Label Margin="0"
                                   Text="{Binding Description}"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   Grid.Row="4" />
                            
                            <Label Margin="5"
                                   Text="Розничная цена:"
                                   FontAttributes="Italic"
                                   TextColor="Black"
                                   Grid.Row="5"/>
                            
                            <BoxView HeightRequest="1"
                                     Margin="0,25,0,0"
                                     Color="YellowGreen"
                                     Grid.Row="6"/>
                            
                            <Label Margin="0"
                                   Text="{Binding RetailPrice}"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                   Grid.Row="6"/>
                            
                            <Label Margin="5"
                                   Text="Оптовая цена:"
                                   FontAttributes="Italic"
                                   TextColor="Black"
                                   Grid.Row="7"/>
                            
                            <BoxView HeightRequest="1"
                                     Margin="0,25,0,0"
                                     Color="YellowGreen"
                                     Grid.Row="8"/>
                            
                            <Label Margin="0"
                                   Text="{Binding WholesalePrice}"
                                   TextColor="Black" FontAttributes="Bold"
                                   Grid.Row="8"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>