<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="BarcodeScanner.MainPage"
             Background="White">
    <ContentPage.Resources>
        <Style TargetType="ViewCell">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="TextColor" Value="Black"/>
            <Style.Triggers>
                <Trigger TargetType="ViewCell" Property="IsSelected" Value="True">
                    <Setter Property="BackgroundColor" Value="Orange"/>
                    <!-- Цвет фона выделенного элемента -->
                    <Setter Property="TextColor" Value="White"/>
                    <!-- Цвет текста выделенного элемента -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="100,Auto,*"
          ColumnDefinitions=".75*,.25*">

        <Image Grid.ColumnSpan="2"
               Source="lotus1.png"/>
        <StackLayout  Grid.Column="0"
                      Grid.Row="1"
                      Margin ="0,0,0,0">

            <Label Text="Искали ранее:"
                   FontSize="Medium"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="-150,10,0,10"/>

            <Label x:Name="NothingLabel"
                   Text="Тут пока ничего нет"
                   FontAttributes="Bold"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   Margin="105,20,0,0"
                   FontSize="Medium"
                   TextColor="Black"
                   IsVisible="{Binding IsLabelVisible}"/>

            <ListView WidthRequest="500"
                      Margin="180,0,0,30"     
                      ItemsSource="{Binding CollectionOfPlants}"
                      SeparatorColor="YellowGreen"
                      ItemTapped="OnItemTapped"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <Grid Padding="15,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding Name}"
                                       VerticalOptions="Center" 
                                       HorizontalOptions="Start" 
                                       Margin="5,0,10,0"
                                       TextColor="Black"
                                       FontAttributes="Bold"
                                       Grid.Column="0"/>

                                <Image Source="{Binding Image}"   
                                       WidthRequest="55" 
                                       HeightRequest="55" 
                                       VerticalOptions="Center" 
                                       HorizontalOptions="Start"
                                       Margin="0,0,0,0"
                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button BackgroundColor="YellowGreen"
                    Text="Сканировать"
                    WidthRequest="190"
                    HeightRequest="60"
                    HorizontalOptions="Center"
                    Margin="101,0,0,0"
                    Clicked="ScanButton_Click"
                    FontSize="Body"/>
        </StackLayout>
    </Grid>
</ContentPage>